{{> messages}}
<form action="/account/register" method="POST" id="reg-form">
    <label for="username">Username</label>
    <input name="username" type="text" id="username" placeholder="Username" value="{{username}}">
    <label for=" email">Email</label>
    <input name="email" type="text" id="email" placeholder="Email" value="{{email}}" />
    <label for="password">Password</label>
    <input name="password" type="password" id="password" placeholder="Password" value="{{password}}" />
    <label for="password2">Confirm Password</label>
    <input name="password2" type="password" id="password2" placeholder="Confirm Password" />
    <button type="submit">Register</button>
</form>